@model IEnumerable<CustomerManager.MODEL.Customer>

@{
    ViewData["Title"] = "Index";
}

@*
<style>
     .k-state-selected {
     background-color: green !important; 
}
</style>*@
<script type="text/javascript" src="~/js/Customer.js"></script>


<div class="container btn-group">
    <div class="col-10">
        <h1 style="color:#0069d9">Customer Information</h1>
    </div>
     <div class="container">  
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="openPopupWindow();">Add New Customer</button><br /><br />  
        </div> 

</div>
<div id="customerGridAll">
    <div class="centerAlign">
        <h4 class="k-header">Customer  Information</h4>
    </div>
</div>
 
        <div id="myPopUp" style="display:none">  
            <div>  
                <div>  
                    <div class="modal-header">  
                        <h4 class="modal-title" id="myModalLabel">Add Customer</h4>  
                    </div>  
                    <div class="modal-body">  
                        <form>  
                            <div class="form-group">  
                                <label for="EmployeeId">CustomerID</label>  
                                <input type="number" class="form-control" id="CustomerID" disabled="disabled"  />  
                            </div>  
                            <div class="form-group">  
                                <label for="Name">Name</label>  
                                <input type="text" class="form-control" id="Name" placeholder="Name"/>  
                            </div>  
                            <div class="form-group">  
                                <label for="Phone">Phone</label>  
                                <input type="text" class="form-control" id="Phone" placeholder="Phone" />  
                            </div>  
                            <div class="form-group">  
                                <label for="Discount">Discount</label>  
                                <input type="text" class="form-control" id="Discount" placeholder="Discount"/>  
                            </div>  
                            <div class="form-group">  
                                <label for="Sex">Sex</label>  
                                <input type="text" class="form-control" id="Sex" placeholder="Sex"/> 
                                
                            </div>
                            <div class="form-group">  
                                <label for="Remarks">Remarks</label>  
                                <input type="text" class="form-control" id="Remarks" placeholder="Remarks"/>  
                            </div> 
                            <div class="form-group">  
                                <label for="PostCode">PostCode</label>  
                                <input type="text" class="form-control" id="PostCode" placeholder="PostCode"/>  
                            </div> 
                            <div class="form-group">  
                                <label for="Thana">Thana</label>  
                                <input type="text" class="form-control" id="Thana" placeholder="Thana"/>  
                            </div> 
                            <div class="form-group">  
                                <label for="Address1">Address1</label>  
                                <input type="text" class="form-control" id="Address1" placeholder="Address1"/>  
                            </div> 
                            <div class="form-group">  
                                <label for="LandPhone">LandPhone</label>  
                                <input type="text" class="form-control" id="LandPhone" placeholder="LandPhone"/>  
                            </div> 
                            <div class="form-group">  
                                <label for="PostOffice">PostOffice</label>  
                                <input type="text" class="form-control" id="PostOffice" placeholder="PostOffice"/>  
                            </div> 
                            <div class="form-group">  
                                <label for="Zilla">Zilla</label>  
                                <input type="text" class="form-control" id="Zilla" placeholder="Zilla"/>  
                            </div> 
                            <div class="form-group">  
                                <label for="PermanentAddress">PermanentAddress</label>  
                                <input type="text" class="form-control" id="PermanentAddress" placeholder="PermanentAddress"/>  
                            </div> 
                        </form>  
                    </div>  
                    <div class="modal-footer">  
                        <button type="button" id="btnAdd" class="btn btn-primary" onclick="AddCustomerInfo()">Add</button>  
                        <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>  
                        <button type="button" class="btn btn-default" onclick="closePopup()">Close</button>  
                    </div>  
                </div>  
            </div>          
        </div>  
